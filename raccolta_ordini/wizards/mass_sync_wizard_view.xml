 <?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista form wizard sincronizzazione massiva -->
        <record id="view_mass_sync_wizard_form" model="ir.ui.view">
            <field name="name">raccolta.mass.sync.wizard.form</field>
            <field name="model">raccolta.mass.sync.wizard</field>
            <field name="arch" type="xml">
                <form string="Sincronizzazione Massiva">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="id" invisible="1"/>
                                Sincronizzazione Massiva Ordini
                            </h1>
                        </div>

                        <group invisible="context.get('show_results', False)">
                            <group string="Filtri Selezione">
                                <field name="agent_ids" widget="many2many_tags"
                                       placeholder="Tutti gli agenti"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>

                            <group string="Tipi Sincronizzazione">
                                <field name="sync_orders"/>
                                <field name="sync_pickings"/>
                                <field name="sync_counters"/>
                            </group>
                        </group>

                        <group invisible="context.get('show_results', False)">
                            <group string="Opzioni Avanzate">
                                <field name="force_sync"/>
                                <field name="validate_documents"/>
                            </group>
                        </group>

                        <group invisible="not context.get('show_results', False)">
                            <group string="Risultati Sincronizzazione" colspan="2">
                                <field name="result_summary" nolabel="1"
                                       widget="text" readonly="1"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button string="Sincronizza" name="action_sync" type="object"
                                class="btn-primary"
                                invisible="context.get('show_results', False)"/>
                        <button string="Stato Sincronizzazione" name="action_view_sync_status"
                                type="object" class="btn-secondary"
                                invisible="not context.get('show_results', False)"/>
                        <button string="Chiudi" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Azione wizard -->
        <record id="action_mass_sync_wizard" model="ir.actions.act_window">
            <field name="name">Sincronizzazione Massiva</field>
            <field name="res_model">raccolta.mass.sync.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>
