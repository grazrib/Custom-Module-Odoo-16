<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ================================= -->
        <!-- SEQUENZE GENERICHE SISTEMA        -->
        <!-- ================================= -->

        <!-- Sequenza generica per ordini raccolta -->
        <record id="sequence_generic_orders" model="ir.sequence">
            <field name="name">Ordini Raccolta - Generico</field>
            <field name="code">raccolta.order.generic</field>
            <field name="prefix">ORD</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Sequenza generica per DDT raccolta -->
        <record id="sequence_generic_ddt" model="ir.sequence">
            <field name="name">DDT Raccolta - Generico</field>
            <field name="code">raccolta.ddt.generic</field>
            <field name="prefix">DDT</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Sequenza generica per picking raccolta -->
        <record id="sequence_generic_picking" model="ir.sequence">
            <field name="name">Picking Raccolta - Generico</field>
            <field name="code">raccolta.picking.generic</field>
            <field name="prefix">PICK</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="active" eval="True"/>
        </record>

        <!-- ================================= -->
        <!-- SEQUENZE PER AGENTI RACCOLTA     -->
        <!-- ================================= -->

        <!-- Sequenza contatori agenti -->
        <record id="sequence_agent_counter" model="ir.sequence">
            <field name="name">Contatori Agenti</field>
            <field name="code">raccolta.agent.counter</field>
            <field name="prefix">AG</field>
            <field name="suffix"></field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Sequenza sessioni raccolta -->
        <record id="sequence_raccolta_session" model="ir.sequence">
            <field name="name">Sessioni Raccolta</field>
            <field name="code">raccolta.session</field>
            <field name="prefix">SES</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>