<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ================================= -->
        <!-- CONFIGURAZIONE DEFAULT            -->
        <!-- ================================= -->

        <!-- Configurazione di default per l'azienda principale -->
        <record id="default_raccolta_config" model="raccolta.config">
            <field name="name">Configurazione Default Raccolta</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="active" eval="True"/>
            <field name="use_agent_numbering" eval="True"/>
            <field name="receipt_format">48mm</field>
            <field name="auto_create_ddt" eval="True"/>
            <field name="auto_print_receipt" eval="True"/>
            <field name="barcode_scanner" eval="True"/>
            <field name="signature_enabled" eval="True"/>
            <field name="max_offline_days" eval="7"/>
            <field name="sync_batch_size" eval="50"/>
        </record>

        <!-- ================================= -->
        <!-- PARAMETRI SISTEMA                 -->
        <!-- ================================= -->

        <!-- Parametro: Versione modulo -->
        <record id="param_module_version" model="ir.config_parameter">
            <field name="key">raccolta.module_version</field>
            <field name="value">16.0.1.0.0</field>
        </record>

        <!-- Parametro: Debug mode -->
        <record id="param_debug_mode" model="ir.config_parameter">
            <field name="key">raccolta.debug_mode</field>
            <field name="value">False</field>
        </record>

        <!-- Parametro: API timeout -->
        <record id="param_api_timeout" model="ir.config_parameter">
            <field name="key">raccolta.api_timeout</field>
            <field name="value">30</field>
        </record>

        <!-- Parametro: Max file size per upload -->
        <record id="param_max_file_size" model="ir.config_parameter">
            <field name="key">raccolta.max_file_size_mb</field>
            <field name="value">10</field>
        </record>

        <!-- ================================= -->
        <!-- SEQUENZE BASE                     -->
        <!-- ================================= -->

        <!-- Sequenza per agenti generici -->
        <record id="sequence_agent_generic" model="ir.sequence">
            <field name="name">Agenti - Generico</field>
            <field name="code">raccolta.agent.generic</field>
            <field name="prefix">AG</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!-- ================================= -->
        <!-- DATI DEMO (solo development)      -->
        <!-- ================================= -->

        <!-- Categoria demo per prodotti raccolta -->
        <record id="demo_product_category" model="product.category">
            <field name="name">Prodotti Demo Raccolta</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <!-- Prodotto demo per test -->
        <record id="demo_product" model="product.product">
            <field name="name">Prodotto Demo Raccolta</field>
            <field name="default_code">DEMO001</field>
            <field name="categ_id" ref="demo_product_category"/>
            <field name="type">product</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="list_price" eval="100.0"/>
            <field name="standard_price" eval="50.0"/>
        </record>

        <!-- Partner demo per test -->
        <record id="demo_partner" model="res.partner">
            <field name="name">Cliente Demo Raccolta</field>
            <field name="is_company" eval="True"/>
            <field name="customer_rank" eval="1"/>
            <field name="supplier_rank" eval="0"/>
            <field name="street">Via Demo 123</field>
            <field name="city">Milano</field>
            <field name="zip">20100</field>
            <field name="country_id" ref="base.it"/>
            <field name="vat">IT12345678901</field>
            <field name="email">demo@raccolta.test</field>
            <field name="phone">+39 02 1234567</field>
        </record>

    </data>
</odoo>