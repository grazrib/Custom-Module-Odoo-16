<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================================= -->
    <!-- VISTA FORM UTENTI ESTESA          -->
    <!-- ================================= -->

    <record id="view_users_form_raccolta" model="ir.ui.view">
        <field name="name">res.users.form.raccolta</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <!-- Aggiungi tab Raccolta Ordini -->
            <xpath expr="//notebook" position="inside">
                <page name="raccolta_ordini" string="Raccolta Ordini"
                      groups="raccolta_ordini.group_raccolta_manager">

                    <!-- Header con stato agente -->
                    <div class="alert alert-info" attrs="{'invisible': [('is_raccolta_agent', '=', False)]}">
                        <div class="row">
                            <div class="col-md-8">
                                <h5><i class="fa fa-user-check"></i> Agente Raccolta Ordini Attivo</h5>
                                <p class="mb-0">
                                    Codice Agente: <strong><field name="agent_code" readonly="1"/></strong><br/>
                                    Ordini Totali: <field name="total_offline_orders" readonly="1"/> |
                                    Da Sincronizzare: <field name="pending_sync_count" readonly="1"/>
                                </p>
                            </div>
                            <div class="col-md-4 text-right">
                                <button name="action_setup_sequences" string="Setup Sequenze"
                                        type="object" class="btn btn-primary btn-sm"
                                        attrs="{'invisible': [('order_sequence_id', '!=', False)]}"/>
                                <button name="reset_sequences" string="Reset Sequenze"
                                        type="object" class="btn btn-warning btn-sm"
                                        attrs="{'invisible': [('order_sequence_id', '=', False)]}"/>
                            </div>
                        </div>
                    </div>

                    <group>
                        <group name="agent_config" string="Configurazione Agente">
                            <field name="is_raccolta_agent"/>
                            <field name="agent_code" attrs="{'required': [('is_raccolta_agent', '=', True)]}"/>
                        </group>

                        <group name="agent_limits" string="Limiti Offline">
                            <field name="max_offline_orders" attrs="{'invisible': [('is_raccolta_agent', '=', False)]}"/>
                            <field name="offline_data_expiry_days" attrs="{'invisible': [('is_raccolta_agent', '=', False)]}"/>
                            <field name="auto_sync_enabled" attrs="{'invisible': [('is_raccolta_agent', '=', False)]}"/>
                        </group>
                    </group>

                    <!-- Sequenze -->
                    <group string="Sequenze Numerazione" attrs="{'invisible': [('is_raccolta_agent', '=', False)]}">
                        <group name="sequences_1">
                            <field name="order_sequence_id" readonly="1"/>
                            <field name="ddt_sequence_id" readonly="1"/>
                        </group>
                        <group name="sequences_2">
                            <field name="picking_sequence_id" readonly="1"/>
                            <field name="last_sync_date" readonly="1"/>
                        </group>
                    </group>

                    <!-- Statistiche agente -->
                    <group string="Statistiche" attrs="{'invisible': [('is_raccolta_agent', '=', False)]}">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                <h3 class="text-primary">
                                    <field name="total_offline_orders" readonly="1"/>
                                </h3>
                                <small>Ordini Offline Totali</small>
                            </div>
                            <div class="col-md-3 text-center">
                                <h3 class="text-warning">
                                    <field name="pending_sync_count" readonly="1"/>
                                </h3>
                                <small>Da Sincronizzare</small>
                            </div>
                            <div class="col-md-3 text-center">
                                <h3 class="text-success">
                                    <field name="session_count" readonly="1"/>
                                </h3>
                                <small>Sessioni Totali</small>
                            </div>
                            <div class="col-md-3 text-center">
                                <h3 class="text-info">
                                    <field name="performance_score" readonly="1"/>
                                </h3>
                                <small>Score Performance</small>
                            </div>
                        </div>
                    </group>

                    <!-- Sessioni recenti -->
                    <field name="recent_sessions" readonly="1"
                           attrs="{'invisible': [('is_raccolta_agent', '=', False)]}"
                           string="Sessioni Recenti">
                        <tree limit="5">
                            <field name="name"/>
                            <field name="start_at"/>
                            <field name="stop_at"/>
                            <field name="state"/>
                            <field name="order_count"/>
                            <field name="pending_order_count"/>
                        </tree>
                    </field>

                </page>
            </xpath>

        </field>
    </record>

    <!-- ================================= -->
    <!-- VISTA TREE UTENTI ESTESA          -->
    <!-- ================================= -->

    <record id="view_users_tree_raccolta" model="ir.ui.view">
        <field name="name">res.users.tree.raccolta</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">

            <!-- Aggiungi colonne raccolta ordini -->
            <xpath expr="//field[@name='login_date']" position="after">
                <field name="is_raccolta_agent"/>
                <field name="agent_code"/>
                <field name="total_offline_orders" sum="Totale Ordini"/>
                <field name="pending_sync_count" sum="Totale da Sincronizzare"/>
            </xpath>

        </field>
    </record>

    <!-- ================================= -->
    <!-- VISTA SEARCH UTENTI ESTESA        -->
    <!-- ================================= -->

    <record id="view_users_search_raccolta" model="ir.ui.view">
        <field name="name">res.users.search.raccolta</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_search"/>
        <field name="arch" type="xml">

            <!-- Aggiungi filtri raccolta ordini -->
            <xpath expr="//filter[@name='inactive_users']" position="after">
                <separator/>
                <filter name="raccolta_agents" string="Agenti Raccolta"
                        domain="[('is_raccolta_agent', '=', True)]"/>
                <filter name="with_pending_sync" string="Con Ordini da Sincronizzare"
                        domain="[('pending_sync_count', '>', 0)]"/>
                <filter name="auto_sync_enabled" string="Auto-Sync Abilitato"
                        domain="[('auto_sync_enabled', '=', True)]"/>
            </xpath>

            <!-- Aggiungi ricerca per codice agente -->
            <xpath expr="//field[@name='login']" position="after">
                <field name="agent_code"/>
            </xpath>

            <!-- Aggiungi raggruppamento -->
            <xpath expr="//group" position="inside">
                <filter name="group_agent_status" string="Stato Agente"
                        context="{'group_by': 'is_raccolta_agent'}"/>
            </xpath>

        </field>
    </record>

    <!-- ================================= -->
    <!-- ACTION AGENTI RACCOLTA            -->
    <!-- ================================= -->

    <record id="action_raccolta_agents" model="ir.actions.act_window">
        <field name="name">Agenti Raccolta Ordini</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_raccolta_agent', '=', True)]</field>
        <field name="context">{'search_default_raccolta_agents': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configura il primo agente per la raccolta ordini
            </p>
            <p>
                Gli agenti raccolta ordini possono utilizzare l'app mobile
                per creare ordini offline con numerazione personalizzata.
            </p>
        </field>
    </record>

    <!-- ================================= -->
    <!-- WIZARD SETUP AGENTE              -->
    <!-- ================================= -->

    <record id="view_user_setup_agent_wizard" model="ir.ui.view">
        <field name="name">user.setup.agent.wizard</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form string="Setup Agente Raccolta Ordini">
                <group>
                    <group name="agent_info" string="Informazioni Agente">
                        <field name="name" readonly="1"/>
                        <field name="login" readonly="1"/>
                        <field name="agent_code" required="1"/>
                    </group>

                    <group name="agent_config" string="Configurazione">
                        <field name="max_offline_orders"/>
                        <field name="offline_data_expiry_days"/>
                        <field name="auto_sync_enabled"/>
                    </group>
                </group>

                <div class="alert alert-info">
                    <strong>Cosa succederà:</strong><br/>
                    • L'utente verrà aggiunto al gruppo "Agente Raccolta Ordini"<br/>
                    • Verranno create sequenze personalizzate per ordini, DDT e picking<br/>
                    • L'utente potrà accedere all'app di raccolta ordini mobile
                </div>

                <footer>
                    <button string="Configura Agente" name="action_setup_as_agent" type="object" class="btn-primary"/>
                    <button string="Annulla" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ================================= -->
    <!-- VISTA KANBAN AGENTI              -->
    <!-- ================================= -->

    <record id="view_raccolta_agents_kanban" model="ir.ui.view">
        <field name="name">raccolta.agents.kanban</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <kanban string="Agenti Raccolta Ordini">
                <field name="name"/>
                <field name="agent_code"/>
                <field name="total_offline_orders"/>
                <field name="pending_sync_count"/>
                <field name="last_sync_date"/>
                <field name="is_raccolta_agent"/>
                <field name="image_128"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)"
                                             class="o_image_40_cover float-left mr-3"/>
                                        <strong><field name="name"/></strong>
                                        <div class="text-muted">
                                            Codice: <field name="agent_code"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm btn-block" name="action_open_raccolta">
                                            <i class="fa fa-mobile-alt"/> Apri App
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-secondary btn-sm btn-block" name="action_view_orders">
                                            <i class="fa fa-list"/> Ordini
                                        </button>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <strong class="text-primary"><field name="total_offline_orders"/></strong><br/>
                                            <small>Ordini</small>
                                        </div>
                                        <div class="col-4">
                                            <strong class="text-warning"><field name="pending_sync_count"/></strong><br/>
                                            <small>Da Sync</small>
                                        </div>
                                        <div class="col-4">
                                            <strong class="text-success">95%</strong><br/>
                                            <small>Performance</small>
                                        </div>
                                    </div>
                                </div>

                                <t t-if="record.last_sync_date.raw_value">
                                    <div class="mt-2 text-muted text-center">
                                        <small>
                                            <i class="fa fa-sync"/>
                                            Ultima sync: <field name="last_sync_date"/>
                                        </small>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ================================= -->
    <!-- ACTION KANBAN AGENTI              -->
    <!-- ================================= -->

    <record id="action_raccolta_agents_kanban" model="ir.actions.act_window">
        <field name="name">Dashboard Agenti</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_raccolta_agents_kanban"/>
        <field name="domain">[('is_raccolta_agent', '=', True)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Nessun agente configurato
            </p>
            <p>
                Configura gli agenti per iniziare a utilizzare la raccolta ordini offline.
            </p>
        </field>
    </record>

</odoo>
