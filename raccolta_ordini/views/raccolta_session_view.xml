<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: FORM           -->
        <!-- ================================= -->

        <record id="view_raccolta_session_form" model="ir.ui.view">
            <field name="name">raccolta.session.form</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <form string="Sessione Raccolta Ordini">
                    <header>
                        <!-- Actions based on state -->
                        <button name="action_open" type="object"
                                string="Apri Sessione" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'opening_control')]}"/>

                        <button name="action_close" type="object"
                                string="Chiudi Sessione" class="btn-secondary"
                                attrs="{'invisible': [('state', 'not in', ['opened', 'closing_control'])]}"/>

                        <button name="action_rescue" type="object"
                                string="Modalità Recupero" class="btn-warning"
                                attrs="{'invisible': [('state', '!=', 'opened')]}"/>

                        <!-- State field -->
                        <field name="state" widget="statusbar"
                               statusbar_visible="opening_control,opened,closing_control,closed"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Smart buttons -->
                            <button name="action_view_orders" type="object"
                                    class="oe_stat_button" icon="fa-shopping-cart">
                                <field name="order_count" widget="statinfo" string="Ordini"/>
                            </button>
                        </div>

                        <!-- Titolo -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nome sessione..."/>
                            </h1>
                        </div>

                        <group>
                            <group string="Informazioni Base">
                                <field name="config_id"/>
                                <field name="user_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>

                            <group string="Tempistiche">
                                <field name="start_at"/>
                                <field name="stop_at"/>
                                <field name="duration" widget="float_time"/>
                            </group>
                        </group>

                        <notebook>
                            <!-- Tab Ordini -->
                            <page string="Ordini" name="orders">
                                <field name="order_ids">
                                    <tree string="Ordini Sessione" create="false" edit="false">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="date_order"/>
                                        <field name="state"/>
                                        <field name="amount_total" sum="Totale"/>

                                        <!-- Azioni inline -->
                                        <button name="action_view_order" type="object"
                                                icon="fa-external-link" title="Apri Ordine"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Tab Statistiche -->
                            <page string="Statistiche" name="stats">
                                <group>
                                    <group string="Conteggi">
                                        <field name="order_count" readonly="1"/>
                                    </group>

                                    <group string="Tempi">
                                        <field name="duration" widget="float_time" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Tab Note -->
                            <page string="Note" name="notes">
                                <group>
                                    <field name="notes" nolabel="1" placeholder="Note sulla sessione..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: TREE           -->
        <!-- ================================= -->

        <record id="view_raccolta_session_tree" model="ir.ui.view">
            <field name="name">raccolta.session.tree</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <tree string="Sessioni Raccolta" decoration-info="state=='opened'"
                      decoration-muted="state=='closed'">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="start_at"/>
                    <field name="stop_at"/>
                    <field name="duration" widget="float_time"/>
                    <field name="order_count"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='opened'"
                           decoration-success="state=='closed'"
                           decoration-warning="state in ['opening_control','closing_control']"/>

                    <!-- Azioni inline -->
                    <button name="action_open" type="object"
                            icon="fa-play" title="Apri Sessione"
                            attrs="{'invisible': [('state', '!=', 'opening_control')]}"/>

                    <button name="action_close" type="object"
                            icon="fa-stop" title="Chiudi Sessione"
                            attrs="{'invisible': [('state', '!=', 'opened')]}"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: KANBAN         -->
        <!-- ================================= -->

        <record id="view_raccolta_session_kanban" model="ir.ui.view">
            <field name="name">raccolta.session.kanban</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="start_at"/>
                    <field name="duration"/>
                    <field name="order_count"/>
                    <field name="state"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <!-- Header -->
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_header_title">
                                            <div class="o_kanban_record_title">
                                                <field name="name"/>
                                            </div>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="user_id"/> •
                                                <field name="start_at" widget="date"/>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Body -->
                                    <div class="oe_kanban_card_content">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span class="badge badge-pill badge-info">
                                                    <field name="order_count"/> Ordini
                                                </span>

                                                <span class="badge badge-pill badge-secondary"
                                                      t-if="record.duration.raw_value">
                                                    <field name="duration" widget="float_time"/>
                                                </span>
                                            </div>

                                            <div class="oe_kanban_bottom_right">
                                                <button name="action_open" type="object"
                                                        class="btn btn-primary btn-sm"
                                                        t-if="record.state.raw_value == 'opening_control'">
                                                    <i class="fa fa-play"/> Apri
                                                </button>

                                                <button name="action_close" type="object"
                                                        class="btn btn-secondary btn-sm"
                                                        t-if="record.state.raw_value == 'opened'">
                                                    <i class="fa fa-stop"/> Chiudi
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: SEARCH         -->
        <!-- ================================= -->

        <record id="view_raccolta_session_search" model="ir.ui.view">
            <field name="name">raccolta.session.search</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <search string="Cerca Sessioni">
                    <!-- Campi ricerca -->
                    <field name="name" string="Nome"
                           filter_domain="[('name','ilike',self)]"/>
                    <field name="user_id" string="Agente"/>
                    <field name="config_id" string="Configurazione"/>

                    <!-- Separatore -->
                    <separator/>

                    <!-- Filtri predefiniti -->
                    <filter string="Aperte" name="opened"
                            domain="[('state','=','opened')]"
                            help="Sessioni aperte"/>

                    <filter string="Chiuse" name="closed"
                            domain="[('state','=','closed')]"
                            help="Sessioni chiuse"/>

                    <filter string="Oggi" name="today"
                            domain="[('start_at','&gt;=',datetime.datetime.combine(context_today(),datetime.time(0,0,0))),
                                     ('start_at','&lt;',datetime.datetime.combine(context_today()+datetime.timedelta(days=1),datetime.time(0,0,0)))]"
                            help="Sessioni di oggi"/>

                    <filter string="Questa Settimana" name="this_week"
                            domain="[('start_at','&gt;=', (context_today()-datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                     ('start_at','&lt;', (context_today()+datetime.timedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))]"
                            help="Sessioni di questa settimana"/>

                    <!-- Raggruppamenti -->
                    <group expand="0" string="Raggruppa per">
                        <filter string="Agente" name="group_by_user"
                                context="{'group_by':'user_id'}"/>
                        <filter string="Stato" name="group_by_state"
                                context="{'group_by':'state'}"/>
                        <filter string="Data" name="group_by_date"
                                context="{'group_by':'start_at:day'}"/>
                        <filter string="Configurazione" name="group_by_config"
                                context="{'group_by':'config_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================= -->
        <!-- AZIONI SESSIONE                   -->
        <!-- ================================= -->

        <record id="action_raccolta_session" model="ir.actions.act_window">
            <field name="name">Sessioni Raccolta</field>
            <field name="res_model">raccolta.session</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_raccolta_session_kanban"/>
            <field name="search_view_id" ref="view_raccolta_session_search"/>
            <field name="context">{
                'search_default_today': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Nessuna sessione di raccolta trovata!
                </p>
                <p>
                    Le sessioni vengono create automaticamente quando un agente
                    inizia la raccolta ordini tramite l'applicazione mobile.
                </p>
            </field>
        </record>

    </data>
</odoo>