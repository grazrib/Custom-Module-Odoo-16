<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: FORM           -->
        <!-- ================================= -->

        <record id="view_raccolta_session_form" model="ir.ui.view">
            <field name="name">raccolta.session.form</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <form string="Sessione Raccolta Ordini">
                    <header>
                        <!-- Actions based on state -->
                        <button name="action_open" type="object"
                                string="Apri Sessione" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'opening_control')]}"/>

                        <button name="action_close" type="object"
                                string="Chiudi Sessione" class="btn-secondary"
                                attrs="{'invisible': [('state', 'not in', ['opened', 'closing_control'])]}"/>

                        <!-- State field -->
                        <field name="state" widget="statusbar"
                               statusbar_visible="opening_control,opened,closing_control,closed"/>
                    </header>

                    <sheet>
                        <!-- Titolo -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nome sessione..."/>
                            </h1>
                        </div>

                        <group>
                            <group string="Informazioni Base">
                                <field name="config_id" options="{'no_create': True}"/>
                                <field name="user_id" options="{'no_create': True}"/>
                                <field name="start_at"/>
                                <field name="stop_at" attrs="{'invisible': [('state', '!=', 'closed')]}"/>
                            </group>

                            <group string="Stato">
                                <field name="state"/>
                                <field name="last_online" attrs="{'invisible': [('state', '=', 'closed')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: TREE           -->
        <!-- ================================= -->

        <record id="view_raccolta_session_tree" model="ir.ui.view">
            <field name="name">raccolta.session.tree</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <tree string="Sessioni Raccolta Ordini"
                      decoration-info="state == 'opening_control'"
                      decoration-success="state == 'opened'"
                      decoration-danger="state == 'closed'">
                    <field name="name"/>
                    <field name="config_id"/>
                    <field name="user_id"/>
                    <field name="start_at"/>
                    <field name="stop_at"/>
                    <field name="state"/>

                    <button name="action_open" type="object"
                            icon="fa-play" title="Apri Sessione"
                            attrs="{'invisible': [('state', '!=', 'opening_control')]}"/>

                    <button name="action_close" type="object"
                            icon="fa-stop" title="Chiudi Sessione"
                            attrs="{'invisible': [('state', 'not in', ['opened'])]}"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: KANBAN         -->
        <!-- ================================= -->

        <record id="view_raccolta_session_kanban" model="ir.ui.view">
            <field name="name">raccolta.session.kanban</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="config_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <field name="start_at"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <!-- Header -->
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_header_title">
                                            <div class="o_kanban_record_title">
                                                <field name="name"/>
                                            </div>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="config_id"/>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Body -->
                                    <div class="oe_kanban_card_content">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span class="badge badge-pill"
                                                      t-attf-class="badge-{{record.state.raw_value == 'opened' ? 'success' : (record.state.raw_value == 'closed' ? 'secondary' : 'info')}}">
                                                    <field name="state"/>
                                                </span>
                                            </div>

                                            <div class="oe_kanban_bottom_right">
                                                <button name="action_open" type="object"
                                                        class="btn btn-primary btn-sm"
                                                        t-if="record.state.raw_value == 'opening_control'">
                                                    <i class="fa fa-play"/> Apri
                                                </button>

                                                <button name="action_close" type="object"
                                                        class="btn btn-secondary btn-sm"
                                                        t-if="record.state.raw_value == 'opened'">
                                                    <i class="fa fa-stop"/> Chiudi
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- SESSIONE RACCOLTA: SEARCH         -->
        <!-- ================================= -->

        <record id="view_raccolta_session_search" model="ir.ui.view">
            <field name="name">raccolta.session.search</field>
            <field name="model">raccolta.session</field>
            <field name="arch" type="xml">
                <search string="Cerca Sessioni">
                    <!-- Campi ricerca -->
                    <field name="name" string="Nome"
                           filter_domain="[('name','ilike',self)]"/>
                    <field name="user_id" string="Agente"/>
                    <field name="config_id" string="Configurazione"/>

                    <!-- Separatore -->
                    <separator/>

                    <!-- Filtri predefiniti -->
                    <filter string="Aperte" name="opened"
                            domain="[('state','=','opened')]"
                            help="Sessioni aperte"/>

                    <filter string="Chiuse" name="closed"
                            domain="[('state','=','closed')]"
                            help="Sessioni chiuse"/>

                    <filter string="Mie Sessioni" name="my_sessions"
                            domain="[('user_id','=',uid)]"
                            help="Le mie sessioni"/>

                    <separator/>

                    <!-- Filtri per data -->
                    <filter string="Oggi" name="today"
                            domain="[('start_at','&gt;=', context_today().strftime('%Y-%m-%d'))]"/>

                    <filter string="Questa Settimana" name="this_week"
                            domain="[('start_at','&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                    <separator/>

                    <!-- Raggruppamenti -->
                    <group expand="0" string="Raggruppa per">
                        <filter string="Agente" name="group_user"
                                context="{'group_by':'user_id'}"/>
                        <filter string="Configurazione" name="group_config"
                                context="{'group_by':'config_id'}"/>
                        <filter string="Stato" name="group_state"
                                context="{'group_by':'state'}"/>
                        <filter string="Data Apertura" name="group_start_date"
                                context="{'group_by':'start_at:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================= -->
        <!-- AZIONI                            -->
        <!-- ================================= -->

        <record id="action_raccolta_session" model="ir.actions.act_window">
            <field name="name">Sessioni Raccolta</field>
            <field name="res_model">raccolta.session</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_my_sessions': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Nessuna sessione raccolta trovata!
                </p>
                <p>
                    Le sessioni vengono create automaticamente quando si apre
                    l'applicazione di raccolta ordini.
                </p>
            </field>
        </record>

    </data>
</odoo>