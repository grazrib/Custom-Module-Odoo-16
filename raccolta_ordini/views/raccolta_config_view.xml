<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- CONFIGURAZIONE RACCOLTA: FORM     -->
        <!-- ================================= -->

        <record id="view_raccolta_config_form" model="ir.ui.view">
            <field name="name">raccolta.config.form</field>
            <field name="model">raccolta.config</field>
            <field name="arch" type="xml">
                <form string="Configurazione Raccolta Ordini">
                    <header>
                        <!-- Azioni header -->
                        <button name="action_open_session" type="object"
                                string="Apri Sessione" class="btn-primary"
                                attrs="{'invisible': [('current_session_id', '!=', False)]}"/>

                        <button name="action_close_current_session" type="object"
                                string="Chiudi Sessione" class="btn-secondary"
                                attrs="{'invisible': [('current_session_id', '=', False)]}"/>

                        <button name="action_open_raccolta_app" type="object"
                                string="Apri App Raccolta" class="btn-success"
                                icon="fa-mobile"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Smart buttons -->
                            <button name="action_view_sessions" type="object"
                                    class="oe_stat_button" icon="fa-clock-o">
                                <field name="session_count" widget="statinfo" string="Sessioni"/>
                            </button>

                            <button name="action_view_open_sessions" type="object"
                                    class="oe_stat_button" icon="fa-play"
                                    attrs="{'invisible': [('open_session_count', '=', 0)]}">
                                <field name="open_session_count" widget="statinfo" string="Aperte"/>
                            </button>
                        </div>

                        <!-- Titolo -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nome configurazione..."/>
                            </h1>
                        </div>

                        <group>
                            <group string="Informazioni Base">
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="user_id" string="Agente Assegnato"/>
                                <field name="warehouse_id"/>
                            </group>

                            <group string="Sessione Corrente">
                                <field name="current_session_id" readonly="1"/>
                                <field name="current_session_id" readonly="1" widget="many2one_button"
                                       attrs="{'invisible': [('current_session_id', '=', False)]}"/>
                            </group>
                        </group>

                        <notebook>
                            <!-- Tab Numerazione -->
                            <page string="Numerazione" name="numbering">
                                <group>
                                    <group string="Configurazione Numerazione">
                                        <field name="use_agent_numbering"/>
                                        <field name="order_sequence_id"
                                               attrs="{'required': [('use_agent_numbering', '=', True)]}"/>
                                        <field name="ddt_sequence_id"
                                               attrs="{'required': [('use_agent_numbering', '=', True)]}"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Tab Stampa -->
                            <page string="Configurazione Stampa" name="printing">
                                <group>
                                    <group string="Impostazioni Ricevute">
                                        <field name="receipt_format"/>
                                        <field name="auto_print"/>
                                        <field name="printer_name" placeholder="Nome stampante..."/>
                                    </group>
                                </group>
                            </page>

                            <!-- Tab DDT -->
                            <page string="DDT" name="ddt">
                                <group>
                                    <group string="Configurazione DDT">
                                        <field name="auto_create_ddt"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Tab Statistiche -->
                            <page string="Statistiche" name="stats">
                                <group>
                                    <group string="Totali">
                                        <field name="session_count" readonly="1"/>
                                        <field name="open_session_count" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- CONFIGURAZIONE RACCOLTA: TREE     -->
        <!-- ================================= -->

        <record id="view_raccolta_config_tree" model="ir.ui.view">
            <field name="name">raccolta.config.tree</field>
            <field name="model">raccolta.config</field>
            <field name="arch" type="xml">
                <tree string="Configurazioni Raccolta">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="current_session_id"/>
                    <field name="session_count"/>
                    <field name="active"/>

                    <!-- Azioni inline -->
                    <button name="action_open_session" type="object"
                            icon="fa-play" title="Apri Sessione"
                            attrs="{'invisible': [('current_session_id', '!=', False)]}"/>

                    <button name="action_open_raccolta_app" type="object"
                            icon="fa-mobile" title="Apri App"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- CONFIGURAZIONE RACCOLTA: KANBAN   -->
        <!-- ================================= -->

        <record id="view_raccolta_config_kanban" model="ir.ui.view">
            <field name="name">raccolta.config.kanban</field>
            <field name="model">raccolta.config</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="current_session_id"/>
                    <field name="session_count"/>
                    <field name="active"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <!-- Header -->
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_header_title">
                                            <div class="o_kanban_record_title">
                                                <field name="name"/>
                                            </div>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="user_id"/>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Body -->
                                    <div class="oe_kanban_card_content">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span class="badge badge-pill badge-info"
                                                      t-if="record.session_count.raw_value">
                                                    <field name="session_count"/> Sessioni
                                                </span>

                                                <span class="badge badge-pill badge-success"
                                                      t-if="record.current_session_id.raw_value">
                                                    Sessione Attiva
                                                </span>
                                            </div>

                                            <div class="oe_kanban_bottom_right">
                                                <button name="action_open_raccolta_app" type="object"
                                                        class="btn btn-primary btn-sm">
                                                    <i class="fa fa-mobile"/> App
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- CONFIGURAZIONE RACCOLTA: SEARCH   -->
        <!-- ================================= -->

        <record id="view_raccolta_config_search" model="ir.ui.view">
            <field name="name">raccolta.config.search</field>
            <field name="model">raccolta.config</field>
            <field name="arch" type="xml">
                <search string="Cerca Configurazioni">
                    <!-- Campi ricerca -->
                    <field name="name" string="Nome"
                           filter_domain="[('name','ilike',self)]"/>
                    <field name="user_id" string="Agente"/>
                    <field name="company_id" groups="base.group_multi_company"/>

                    <!-- Separatore -->
                    <separator/>

                    <!-- Filtri predefiniti -->
                    <filter string="Attive" name="active"
                            domain="[('active','=',True)]"
                            help="Configurazioni attive"/>

                    <filter string="Con Sessione Aperta" name="with_session"
                            domain="[('current_session_id','!=',False)]"
                            help="Configurazioni con sessione aperta"/>

                    <filter string="Senza Sessione" name="without_session"
                            domain="[('current_session_id','=',False)]"
                            help="Configurazioni senza sessione aperta"/>

                    <separator/>

                    <filter string="Archiviate" name="inactive"
                            domain="[('active','=',False)]"
                            help="Configurazioni archiviate"/>

                    <!-- Raggruppamenti -->
                    <group expand="0" string="Raggruppa per">
                        <filter string="Agente" name="group_by_user"
                                context="{'group_by':'user_id'}"/>
                        <filter string="Azienda" name="group_by_company"
                                context="{'group_by':'company_id'}"
                                groups="base.group_multi_company"/>
                        <filter string="Stato Sessione" name="group_by_session_state"
                                context="{'group_by':'current_session_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================= -->
        <!-- AZIONI CONFIGURAZIONE             -->
        <!-- ================================= -->

        <record id="action_raccolta_config" model="ir.actions.act_window">
            <field name="name">Configurazioni Raccolta</field>
            <field name="res_model">raccolta.config</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_raccolta_config_kanban"/>
            <field name="search_view_id" ref="view_raccolta_config_search"/>
            <field name="context">{
                'search_default_active': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea la prima configurazione per la raccolta ordini!
                </p>
                <p>
                    Le configurazioni definiscono come funziona l'applicazione di raccolta ordini:
                    agente, warehouse, sequenze, impostazioni DDT, etc.
                </p>
            </field>
        </record>

    </data>
</odoo>