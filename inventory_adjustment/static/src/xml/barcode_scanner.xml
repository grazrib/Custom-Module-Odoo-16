<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="inventory_adjustment.BarcodeScanner">
        <div class="o_barcode_scanner_main p-3">
            <div class="o_barcode_scanner_header mb-3">
                <h3>Scanner Codice a Barre</h3>
            </div>
            <div class="o_barcode_scanner_notification alert alert-info mb-3">
                Inizializzazione scanner...
            </div>
            <div class="o_barcode_scanner_container mb-3" style="width: 100%; height: 300px; background-color: #f8f9fa; position: relative;">
                <!-- Qui verrÃ  visualizzata l'immagine della fotocamera -->
                <div class="barcode_scanner_target" style="width: 70%; height: 40%; border: 2px solid #fff; border-radius: 10px; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
            </div>
            <div class="o_barcode_scanner_controls d-flex justify-content-between">
                <button class="o_barcode_scanner_start btn btn-primary">
                    <i class="fa fa-camera mr-2"/> Inizia Scansione
                </button>
                <button class="o_barcode_scanner_cancel btn btn-secondary">
                    <i class="fa fa-times mr-2"/> Annulla
                </button>
            </div>
        </div>
    </t>
</templates>